{
    "manifest_version": 3,
    "name": "ALX_MultiTone-Magic",
    "version": "1.0.0",
    "description": "Change Intranet webpage colors ",
    "permissions": [
      "activeTab",
      "scripting",
      "storage"
  ],
  "background": {
    "service_worker": "public/background.js"
  },
    "content_scripts": [
        {
            "matches": ["https://intranet.alxswe.com/*" ],
            "js": ["public/content.js"],
            "css": ["public/theme.css"],
            "run_at": "document_idle"
        }
    ],
    "action": {
        "default_title": "ALX Intranet themes",
      "default_popup": "public/index.html"
    }    
  }